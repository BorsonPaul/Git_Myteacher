<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CEACBB3"
    android:orientation="vertical"
    tools:context=".PageOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="#F57F17"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="6dp"
            android:src="@drawable/smallphoto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:padding="15dp"
            android:text="Subhag Swami"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="30dp"
            android:textStyle="italic" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imgSliders"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="10"
                app:iss_delay="1000"
                app:iss_period="1000"
                app:iss_title_background="@color/teal_200" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="biography"
                android:padding="10dp"
                android:text="Biography"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="pravupad"
                android:padding="10dp"
                android:text="Srila Pravupad"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="mpranam"
                android:padding="10dp"
                android:text="Pranaam Mantra"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="message"
                android:padding="10dp"
                android:text="Message of Swami"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Image"
                android:padding="10dp"
                android:text="Images of Swami"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Audio"
                android:padding="10dp"
                android:text="Audio of Swami"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Video"
                android:padding="10dp"
                android:text="Video of Swami"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Quotes"
                android:padding="10dp"
                android:text="Quotes of Swami"
                android:textSize="20dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="255dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="sans-serif-condensed"
                android:onClick="facebook"
                android:padding="10dp"
                android:text="Facebook"
                android:textSize="20dp"
                android:textStyle="italic" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>